[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = marc
	email = marc.partensky@gmail.com
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = ~/.stCommitMsg
[pull]
	rebase = true
[init]
	defaultBranch = main
[alias]
	pushall = "!gitpushall() { \
		git remote | xargs -L1 git push --all; \
	}; gitpushall"
	pullall = "!gitpullall() { \
		git remote | xargs -L1 git pull; \
	}; gitpullall"
	browse = "!gitbrowse() { \
    if [[ -z \"$1\" ]]; then \
        echo -e \"warning: no remote name given. Using origin as default\n\" \
    fi \
    local remote=\"${1:-origin}\" \
    local tool=\"$(open_tool)\" \
    local url=\"$(parsed_remote $remote)\" \
    if [[ -z \"$tool\" ]]; then \
        echo \"fatal: you must have either 'open' or 'xdg-open' installed\" \
        return 1 \
    fi \
    if [[ -z \"$url\" ]]; then \
        echo \"fatal: no remote with name '$remote' was found\" \
        return 1 \
    fi \
    echo \"Browsing to $url...\" \
    eval \"$tool $url\" 2> /dev/null || echo \"fatal: cannot browse to $url\" \
	}; gitbrowse"
[http]
	postBuffer = 157286400
