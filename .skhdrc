alt - h : yabai -m window --focus west
alt - k : yabai -m window --focus north
alt - j : yabai -m window --focus south
alt - l : yabai -m window --focus east

ctrl + alt - k : nodesktopicon
alt - k : desktopicon
ctrl + alt - n : noscreenshots

# Open any app in 2 keys
fn - c: open -a /Applications/Google\ Chrome.app
alt - a: open -a /Applications/Alacritty.app
alt - d: open -a /Applications/Discord.app
alt - t: open -a /Applications/Microsoft\ Teams.app
alt - s: open -a /Applications/Slack.app
fn - l: open -a /System/Applications/Calendar.app
fn - m: open -a /System/Applications/Music.app

shift + alt - return : Alacritty
shift + alt - v : alacritty -e ssh vps
